/* PROJECTS */
.project {
  border: 2px solid $faint-gray;
  margin-bottom: 3rem;
  color: $medium-gray;
  text-align: center;
  padding: 20px;
  @include transition-property(border, color);
  @include transition-duration(.3s, .3s);
  &:hover {
    cursor: pointer;
    border: 2px solid $cream;
    color: $cream !important;
  }
  .product_thumbnail {
    margin-bottom: 1rem;
  }
  .project_summary {
    font-weight: 100;
    color: $medium-gray;
  }
  .project_name {
    font-weight: 600;
  }
}
.project-slideout {
  position: fixed;
  right: -80%;
  top: 0;
  width: 80%;
  height: 100%;
  overflow: hidden;
  background-color: $black;
  z-index: 10000;
  border-left: 1px solid $faint-gray;
  p {
    margin-bottom: 1rem;
  }
  .project-description {
    width: 100%;
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    padding: 2em 4em;
  }
  .slideout-trigger {
    position: absolute;
    top: 12px;
    right: 30px;
    display: inline-block;
    font-size: 1.5rem;
    border: 1px solid;
    padding: 5px 12px 8px;
    background-color: $black;
  }
}
.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(18,19,20,0.9);
  z-index: 9999;
}
/* END PROJECTS CSS */
/* ABOUT ME CSS */
p.about_me {
  font-size: 1.4375em;
}
ul.contact-methods {
  list-style-type:  none;
  margin-top: 15px;
  li {
    text-align: center;
    a {
      color: $cream;
    }
    p {
      display: block;
      margin-top: 10px;
    }
  }
  [class^="icon-"], [class*=" icon-"] {
    font-size: 2.5rem;
    color: $medium-gray;
    @include transition-property(color);
    @include transition-duration(.3s);
    &:hover {
      color: $cream;
    }
  }

}
/* END ABOUT ME CSS */
.skill-description {
  margin-bottom: 2rem;
}
.skill-title.uppercase {
  margin-top: 1rem;
  letter-spacing: 1px;
  font-weight: 600;
}
#wcwb {
  display: block;
}
.ninja-skills {
  display: block;
  margin: 0 auto;
}
.top_shelf_mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20px;
  z-index: 1000;
  &:before, &:after {
    content: ' ';
    display: block;
    position: absolute;
    top: 0;
    height: 0;
    border-bottom: 20px solid $dark-gray;
    width: 50%;
  }
  &:before {
    border-left: 0;
    border-right: 20px solid transparent;
    left: 0;
  }
  &:after {
    right: 0;
    border-right: 0;
    border-left: 20px solid transparent;
  }
}
.dry-erase-images {
  position: absolute;
  visibility: hidden;
}
.chattermap-dry-erase {
  bottom: 5%;
  right: 3%;
  width: 400px;
}
.flow-dry-erase {
  bottom: 14%;
  left: 5%;
  width: 550px;
}
.ab-dry-erase {
  top: 16%;
  right: 4%;
  width: 240px;
}
.share-dry-erase {
  top: 14%;
  left: 3%;
  width: 280px;
}
.hero-text {
  margin-top: 250px;
  color: #f9f9f9;
  display: block;
  font-weight: 300;
  letter-spacing: 5px;
  margin: 200px auto 0;
  font-size: 4rem;
  z-index: 3;
  position: relative;
  text-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
}
.top-shelf {
  position: relative;
  overflow: hidden;
}
.top-shelf.background-container .top-shelf-media {
  background-image: url(<%= asset_path 'hero-home_progressive.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 100%;
  width: 100%;
  &:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: $dark-gray;
    opacity: 0.3;
  }
}
.testimonial {
  margin-bottom: 5rem;
}
.who_said {
  margin-top: 1rem;
  p {
    margin-bottom: 0;
    font-weight: 600;
  }
}
h4.testimonial_body {
  margin-top: -8px;
  font-weight: 100;
  z-index: 1;
  position: relative;
  text-indent: 50px;
  font-family: "adelle", serif;
}
.testimonials > :last-child {
   margin-bottom: 0 !important; 
}
.section-header {
  margin-top: 0;
  margin-bottom: 66px;
  border-bottom: 1px solid $faint-gray;
  padding-bottom: 10px;
  font-weight: 300;
  &.uppercase {
    letter-spacing: 3px;
    font-weight: 300;
  }
}
.quotation-mark {
  font-size: 8rem;
  font-family: sans-serif;
  color: $faint-gray;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  line-height: 4rem;
  padding-left: 0.7375rem;
}
.testimonial-content {
  position: relative;
}
.skill {
  margin-bottom: 3rem;
}
@media #{$large-up} {
  margin-bottom: 0;
}
@media #{$medium-only} {
  ul.contact-methods {
    li.margin-bottom {
        margin-bottom: 40px;
     }
  }
  .skill.product {
    clear: both;
  }
  .share-dry-erase {
    width: 220px;
  }
  .ab-dry-erase {
    width: 230px;
  }
  .flow-dry-erase {
    width: 360px;
    bottom: 22%;
    left: 3%;
  }
  .chattermap-dry-erase {
    width: 300px;
  }
  .hero-text {
    font-size: 4rem;
    letter-spacing: 3px;
    span.first-line {
      display: block;
    }
  }
  .project-slideout {
    width: 90%;
    right: -90%;
    .project-description {
      padding: 2em 2em;
    }
    .slideout-trigger {
      padding: 1px 8px 5px;
    }
  }

}
@media #{$medium-up} {
  .top-shelf.background-container {
    min-height: 745px;
  }
}
@media #{$small-only} {
  ul.contact-methods {
    li {
        margin-bottom: 3rem;
        h4 {
          margin-top: 5px;
        }
        &.no-margin-bottom {
          margin-bottom: 0;
        }
     }
     [class^="icon-"], [class*=" icon-"] {
       font-size: 2rem;
    }
  }
  .skill .accordion {
    max-width: 70%;
    margin: 1rem auto 0;
  }
  .ninja-skills {
    max-width: 35%;
  }
  .hero-text {
    margin-top: 100px;
    letter-spacing: 2px;
    font-size: 2rem;
    span.first-line {
      display: block;
    }
  }
  .dry-erase-images.share-dry-erase {
    display: block !important;
    position: relative;
    top: auto;
    left: auto;
    margin: 0 auto 50px;
    width: 220px;
  }
  .top-shelf.background-container {
    min-height: 400px;
  }

  .section-header {
    margin-bottom: 25px;
  }
  .portrait-photo {
    display: block;
  }
  .about-text, .testimonial-content {
    float: none !important;
    padding-top: 5px;
  }
  .testimonial {
    margin-bottom: 3rem;
  }
  .testimonial-content {
    h4 {
      text-indent: 0;
    }
    .quotation-mark {
      display: none;
    }
  }
  p.about_me {
    font-size: 1rem;
  }
  .project-slideout {
    width: 100%;
    right: -100%;
    .project-description {
      padding: 2em 1em 0;
    }
    .slideout-trigger {
      padding: 1px 8px 5px;
      top: 5px;
      right: 5px;
      background-color: $black;
      z-index: 1;
    }
  }
}
