/* PROJECTS */
.project {
  border: 2px solid $medium-gray;
  margin-bottom: 3rem;
  color: $medium-gray;
  text-align: center;
  padding: 20px;
  @include transition-property(border, color);
  @include transition-duration(.3s, .3s);
  &:hover {
    cursor: pointer;
    border: 2px solid $primary-color;
    color: $cream;
    .product_thumbnail {
      opacity: 1;
    }
  }
  .product_thumbnail {
    margin-bottom: 1rem;
    opacity: 1;
  }
  .project_summary {
    font-weight: 300;
  }
}
.project-slideout {
  position: fixed;
  right: -80%;
  top: 0;
  width: 80%;
  height: 100%;
  overflow: hidden;
  background-color: $black;
  z-index: 9999;
  border-left: 1px solid $faint-gray;
  p {
    margin-bottom: 1rem;
  }
  .project-description {
    width: 100%;
    height: 100%;
    overflow: scroll;
    padding: 2em 4em;
  }
  .slideout-trigger {
    position: absolute;
    top: 12px;
    right: 12px;
    display: inline-block;
    font-size: 1.5rem;
    border: 1px solid;
    padding: 5px 12px 8px;
    background-color: $black;
  }
}
.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(18,19,20,0.9);
  z-index: 4;
}
/* END PROJECTS CSS */
p.about_me {
  font-size: 1.4375em;
}
.skill-description {
  margin-bottom: 2rem;
}
.skill-title.uppercase {
  margin-top: 1rem;
  letter-spacing: 0.5px;
}
#wcwb {
  display: block;
}
.ninja-skills {
  display: block;
  margin: 0 auto;
}
.top_shelf_mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20px;
  &:before, &:after {
    content: ' ';
    display: block;
    position: absolute;
    top: 0;
    height: 0;
    border-bottom: 20px solid $dark-gray;
    width: 50%;
  }
  &:before {
    border-left: 0;
    border-right: 20px solid transparent;
    left: 0;
  }
  &:after {
    right: 0;
    border-right: 0;
    border-left: 20px solid transparent;
  }
}
.dry-erase-images {
  position: absolute;
  visibility: hidden;
}
.chattermap-dry-erase {
  bottom: 5%;
  right: 3%;
  width: 400px;
}
.flow-dry-erase {
  bottom: 14%;
  left: 5%;
  width: 550px;
}
.ab-dry-erase {
  top: 16%;
  right: 4%;
  width: 240px;
}
.share-dry-erase {
  top: 14%;
  left: 3%;
  width: 280px;
}
.hero-text {
  margin-top: 250px;
  background-image: url(<%= asset_path 'dry-erase-headline.png' %>);
  background-size: 100%;
  background-repeat: no-repeat;
  width: 800px;
  height: 95px;
  display: block;
  margin: 290px auto 0;
}
.top-shelf.background-container {
  background-image: url(<%= asset_path 'dry-erase-bckd.jpg' %>);
  background-size: 100%;
  position: relative;
  padding: 66px 0 0;
  background-position: 0 66px;
  overflow: hidden;
}
.testimonial {
  margin-bottom: 5rem;
}
.who_said {
  margin-top: 1rem;
  p {
    margin-bottom: 0;
  }
}
h4.testimonial_body {
  margin-top: -8px;
  font-weight: 300;
  z-index: 1;
  position: relative;
  text-indent: 50px;
}
.testimonials > :last-child {
   margin-bottom: 0 !important; 
}
.section-header {
  margin-top: 0;
  margin-bottom: 66px;
  border-bottom: 1px solid $faint-gray;
  padding-bottom: 10px;
  font-weight: 300;
  &.uppercase {
    letter-spacing: 3px;
    font-weight: 300;
  }
}
.quotation-mark {
  font-size: 8rem;
  font-family: sans-serif;
  color: $faint-gray;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  line-height: 4rem;
  padding-left: 0.7375rem;
}
.testimonial-content {
  position: relative;
}
.skill {
  margin-bottom: 3rem;
}
@media #{$large-up} {
  margin-bottom: 0;
}
@media #{$medium-only} {
  .skill.product {
    clear: both;
  }
  .share-dry-erase {
    width: 220px;
  }
  .ab-dry-erase {
    width: 230px;
  }
  .flow-dry-erase {
    width: 360px;
    bottom: 22%;
    left: 3%;
  }
  .chattermap-dry-erase {
    width: 300px;
  }
  .hero-text {
    margin-top: 275px;
    width: 90%;
  }
  .project-slideout {
    width: 90%;
    right: -90%;
    .project-description {
      padding: 2em 2em;
    }
    .slideout-trigger {
      padding: 1px 8px 5px;
    }
  }

}
@media #{$medium-up} {
  .top-shelf.background-container {
    min-height: 745px;
  }
}
@media #{$small-only} {
  .skill .accordion {
    max-width: 70%;
    margin: 1rem auto 0;
  }
  .ninja-skills {
    max-width: 35%;
  }
  .hero-text {
    margin-top: 15px;
    height: 60px;
    width: 95%;
    strong {
      display: block;
    }
  }
  .dry-erase-images.share-dry-erase {
    display: block !important;
    position: relative;
    top: auto;
    left: auto;
    margin: 0 auto 50px;
    width: 220px;
  }
  .top-shelf.background-container {
    min-height: 400px;
  }

  .section-header {
    margin-bottom: 25px;
  }
  .portrait-photo {
    display: block;
  }
  .about-text, .testimonial-content {
    float: none !important;
  }
  .testimonial {
    margin-bottom: 3rem;
  }
  .testimonial-content {
    h4 {
      text-indent: 0;
    }
    .quotation-mark {
      display: none;
    }
  }
  p.about_me {
    font-size: 0.9rem;
  }
  .project-slideout {
    width: 100%;
    right: -100%;
    .project-description {
      padding: 2em 1em 0;
    }
    .slideout-trigger {
      padding: 1px 8px 5px;
    }
  }
}
